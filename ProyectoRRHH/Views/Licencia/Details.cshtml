@model ProyectoRRHH.Models.Licencia

@{
    ViewData["Title"] = "Details";
}

<h1>Licencia</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Fecha inicio</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class = "col-sm-2">Cantidad de días</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CantDias)
        </dd>
        <dt class = "col-sm-2">DNI Usuario</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Dni)
        </dd>
        <dt class = "col-sm-2">Estado Aprobado</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Aprobado)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-success">Editar</a> |
    <a asp-action="Index" class="btn btn-outline-danger">Volver atrás</a>
</div>
